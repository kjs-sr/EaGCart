<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>관리자 - 회원 관리 | EaGCart</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .modal {
        transition: opacity 0.25s ease;
      }
      body.modal-active {
        overflow: hidden;
      }
    </style>
  </head>
  <body class="bg-gray-100 font-sans">
    <div class="flex">
      <%- include('./partials/sidebar.ejs', { active }) %>

      <main class="flex-1 p-8 space-y-6 overflow-y-auto h-screen">
        <!-- 타이틀 -->
        <div
          class="flex items-center justify-between mb-8 border-b pb-4 border-gray-300"
        >
          <h2 class="text-3xl font-bold text-gray-800">회원 관리</h2>
        </div>

        <!-- 검색/필터 -->
        <section class="bg-white p-6 rounded-lg shadow-md mb-6">
          <!-- [수정] justify-between 제거 -> 왼쪽 정렬 (gap-6 유지) -->
          <div class="flex flex-col md:flex-row items-center gap-6">
            <div class="relative w-full md:w-1/2 lg:w-1/3">
              <input
                type="text"
                id="searchInput"
                placeholder="회원 검색 (아이디, 닉네임, 이메일)"
                class="w-full pl-4 pr-10 py-2 border border-gray-300 rounded-lg focus:border-purple-500 focus:ring-1 focus:ring-purple-500 outline-none transition text-sm"
                onkeyup="filterUsers()"
              />
              <button
                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-purple-600"
                onclick="filterUsers()"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                  />
                </svg>
              </button>
            </div>
            <!-- 라디오 버튼 영역 -->
            <div class="flex items-center gap-4 text-sm">
              <span class="font-bold text-gray-800 hidden md:inline">상태</span>
              <label
                class="flex items-center gap-1 cursor-pointer hover:text-purple-600 transition"
                ><input
                  type="radio"
                  name="status"
                  value="all"
                  checked
                  class="accent-purple-600 w-4 h-4"
                  onchange="filterUsers()"
                /><span>전체</span></label
              >
              <label
                class="flex items-center gap-1 cursor-pointer hover:text-emerald-600 transition"
                ><input
                  type="radio"
                  name="status"
                  value="ACTIVE"
                  class="accent-emerald-500 w-4 h-4"
                  onchange="filterUsers()"
                /><span>정상</span></label
              >
              <label
                class="flex items-center gap-1 cursor-pointer hover:text-gray-600 transition"
                ><input
                  type="radio"
                  name="status"
                  value="WITHDRAWN"
                  class="accent-gray-500 w-4 h-4"
                  onchange="filterUsers()"
                /><span>탈퇴</span></label
              >
              <label
                class="flex items-center gap-1 cursor-pointer hover:text-rose-600 transition"
                ><input
                  type="radio"
                  name="status"
                  value="BANNED"
                  class="accent-rose-500 w-4 h-4"
                  onchange="filterUsers()"
                /><span>제한</span></label
              >
            </div>
          </div>
        </section>

        <!-- 목록 테이블 -->
        <section
          class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200"
        >
          <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-center" id="userTable">
              <thead
                class="bg-gray-50 text-gray-600 font-bold border-b border-gray-200 whitespace-nowrap"
              >
                <tr>
                  <th class="py-3 px-4 w-32">회원코드</th>
                  <th class="py-3 px-4">아이디</th>
                  <th class="py-3 px-4">닉네임</th>
                  <th class="py-3 px-4 text-left">이메일</th>
                  <th class="py-3 px-4 w-32">가입일</th>
                  <th class="py-3 px-4 w-24">상태</th>
                  <th class="py-3 px-4 w-24">관리</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100 text-gray-600">
                <% if (admin.userList && admin.userList.length > 0) { %> <%
                admin.userList.forEach((user) => { %>
                <tr
                  class="user-row hover:bg-gray-50 transition duration-150"
                  data-status="<%= user.status %>"
                >
                  <td
                    class="py-3 px-4 font-semibold text-gray-800 whitespace-nowrap"
                  >
                    <%= user.code %>
                  </td>
                  <td class="py-3 px-4 font-medium search-target">
                    <%= user.id %>
                  </td>
                  <td class="py-3 px-4 search-target"><%= user.nickname %></td>
                  <td class="py-3 px-4 text-left text-gray-500 search-target">
                    <%= user.email %>
                  </td>
                  <td class="py-3 px-4 text-xs text-gray-400 whitespace-nowrap">
                    <%= user.regDate %>
                  </td>
                  <td class="py-3 px-4 whitespace-nowrap">
                    <% if (user.status === 'ACTIVE') { %>
                    <span
                      class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-200"
                      >정상</span
                    >
                    <% } else if (user.status === 'WITHDRAWN') { %>
                    <span
                      class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500 border border-gray-200"
                      >탈퇴</span
                    >
                    <% } else if (user.status === 'BANNED') { %>
                    <span
                      class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-50 text-red-700 border border-red-200"
                      >제한</span
                    >
                    <% } else { %>
                    <span
                      class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-200"
                      ><%= user.status %></span
                    >
                    <% } %>
                  </td>
                  <td class="py-3 px-4">
                    <button
                      class="inline-block px-3 py-1 bg-white border border-gray-300 rounded text-xs font-bold text-gray-600 hover:bg-purple-50 hover:text-purple-600 hover:border-purple-200 transition shadow-sm whitespace-nowrap"
                      onclick="openUserModal('<%= user.id %>', '<%= user.nickname %>', '<%= user.email %>', '<%= user.regDate %>', '<%= user.status %>', '<%= user.banReason %>')"
                    >
                      관리
                    </button>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr id="noResultRow">
                  <td colspan="7" class="py-12 text-center text-gray-400">
                    가입된 회원이 없습니다.
                  </td>
                </tr>
                <% } %>
                <tr id="searchNoResult" class="hidden">
                  <td colspan="7" class="py-12 text-center text-gray-400">
                    검색 결과가 없습니다.
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>
      </main>
    </div>

    <!-- 회원 관리 모달 -->
    <div
      id="userModal"
      class="modal fixed inset-0 hidden items-center justify-center z-50"
    >
      <div
        class="modal-overlay absolute inset-0 bg-gray-900 opacity-50"
        onclick="closeUserModal()"
      ></div>
      <div
        class="modal-container bg-white w-11/12 md:max-w-lg mx-auto rounded-lg shadow-lg z-50 overflow-y-auto relative max-h-[90vh]"
      >
        <div class="modal-content py-6 px-8 text-left">
          <div
            class="flex justify-between items-center pb-4 border-b border-gray-200 mb-6"
          >
            <p class="text-2xl font-bold text-gray-800">회원 상세 관리</p>
            <div
              class="cursor-pointer z-50 p-2 hover:bg-gray-100 rounded-full"
              onclick="closeUserModal()"
            >
              ✕
            </div>
          </div>

          <form id="userEditForm">
            <div class="space-y-5">
              <!-- 회원 정보 -->
              <div
                class="grid grid-cols-2 gap-4 bg-gray-50 p-4 rounded-lg border border-gray-100"
              >
                <div>
                  <label
                    class="block text-xs font-bold text-gray-500 mb-1 uppercase"
                    >회원 아이디</label
                  >
                  <p
                    id="modalUserId"
                    class="text-sm font-semibold text-gray-800"
                  ></p>
                </div>
                <div>
                  <label
                    class="block text-xs font-bold text-gray-500 mb-1 uppercase"
                    >닉네임</label
                  >
                  <p
                    id="modalUserNick"
                    class="text-sm font-semibold text-gray-800"
                  ></p>
                </div>
                <div class="col-span-2">
                  <label
                    class="block text-xs font-bold text-gray-500 mb-1 uppercase"
                    >이메일</label
                  >
                  <p
                    id="modalUserEmail"
                    class="text-sm font-semibold text-gray-800"
                  ></p>
                </div>
                <div class="col-span-2">
                  <label
                    class="block text-xs font-bold text-gray-500 mb-1 uppercase"
                    >가입일</label
                  >
                  <p
                    id="modalUserDate"
                    class="text-sm font-semibold text-gray-800"
                  ></p>
                </div>
              </div>

              <!-- 상태 변경 -->
              <div>
                <label class="block text-sm font-bold text-gray-700 mb-3"
                  >회원 상태 변경</label
                >
                <div class="grid grid-cols-2 gap-4">
                  <label class="cursor-pointer group">
                    <input
                      type="radio"
                      name="modalStatus"
                      value="ACTIVE"
                      class="peer hidden"
                    />
                    <div
                      class="py-3 text-center rounded-lg border border-gray-200 text-gray-500 peer-checked:bg-emerald-50 peer-checked:text-emerald-700 peer-checked:border-emerald-200 peer-checked:ring-1 peer-checked:ring-emerald-200 transition font-bold group-hover:bg-gray-50"
                    >
                      정상 (Active)
                    </div>
                  </label>
                  <label class="cursor-pointer group">
                    <input
                      type="radio"
                      name="modalStatus"
                      value="BANNED"
                      class="peer hidden"
                    />
                    <div
                      class="py-3 text-center rounded-lg border border-gray-200 text-gray-500 peer-checked:bg-rose-50 peer-checked:text-rose-700 peer-checked:border-rose-200 peer-checked:ring-1 peer-checked:ring-rose-200 transition font-bold group-hover:bg-gray-50"
                    >
                      제재 (Ban)
                    </div>
                  </label>
                </div>
              </div>

              <!-- 제재 사유 -->
              <div>
                <label class="block text-sm font-bold text-gray-700 mb-2"
                  >관리자 메모 / 제재 사유</label
                >
                <textarea
                  id="modalBanReason"
                  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none transition text-sm"
                  rows="3"
                  placeholder="제재 시 사유를 입력하거나 관리자 메모를 남기세요."
                ></textarea>
              </div>
            </div>

            <div class="flex justify-end pt-6 mt-4 gap-3">
              <button
                type="button"
                class="px-5 py-2.5 bg-gray-100 text-gray-600 rounded-lg font-bold hover:bg-gray-200 transition"
                onclick="closeUserModal()"
              >
                취소
              </button>
              <button
                type="button"
                class="px-6 py-2.5 bg-purple-600 text-white rounded-lg font-bold hover:bg-purple-700 transition shadow-sm"
                onclick="updateUserStatus()"
              >
                저장하기
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      function filterUsers() {
        const searchInput = document
          .getElementById("searchInput")
          .value.toLowerCase();
        const statusFilter = document.querySelector(
          'input[name="status"]:checked'
        ).value;
        const rows = document.querySelectorAll(".user-row");
        let hasVisibleRow = false;

        rows.forEach((row) => {
          const targets = row.querySelectorAll(".search-target");
          let textMatch = false;
          targets.forEach((target) => {
            if (target.textContent.toLowerCase().includes(searchInput))
              textMatch = true;
          });
          const rowStatus = row.getAttribute("data-status");
          let statusMatch =
            statusFilter === "all" || rowStatus === statusFilter;

          if (textMatch && statusMatch) {
            row.classList.remove("hidden");
            hasVisibleRow = true;
          } else {
            row.classList.add("hidden");
          }
        });

        document
          .getElementById("searchNoResult")
          .classList.toggle("hidden", hasVisibleRow);
        const emptyRow = document.getElementById("noResultRow");
        if (emptyRow) emptyRow.classList.add("hidden");
      }

      function openUserModal(id, nickname, email, regDate, status, banReason) {
        document.getElementById("modalUserId").textContent = id;
        document.getElementById("modalUserNick").textContent = nickname;
        document.getElementById("modalUserEmail").textContent = email;
        document.getElementById("modalUserDate").textContent = regDate;

        document.getElementById("modalBanReason").value = banReason || "";

        const radios = document.getElementsByName("modalStatus");
        for (let radio of radios) {
          if (radio.value === status) radio.checked = true;
        }

        const modal = document.getElementById("userModal");
        modal.classList.remove("hidden");
        modal.classList.add("flex");
        document.body.classList.add("modal-active");
      }

      function closeUserModal() {
        const modal = document.getElementById("userModal");
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        document.body.classList.remove("modal-active");
      }

      async function updateUserStatus() {
        const userId = document.getElementById("modalUserId").textContent;
        const status = document.querySelector(
          'input[name="modalStatus"]:checked'
        )?.value;
        const banReason = document.getElementById("modalBanReason").value;

        if (!status) return alert("상태를 선택해주세요.");

        try {
          const res = await fetch("/admin/users/update", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ userId, status, banReason }),
          });
          const data = await res.json();

          if (data.success) {
            alert("회원 정보가 저장되었습니다.");
            location.reload();
          } else {
            alert("저장 실패: " + data.message);
          }
        } catch (e) {
          console.error(e);
          alert("서버 통신 중 오류가 발생했습니다.");
        }
      }
    </script>
  </body>
</html>
