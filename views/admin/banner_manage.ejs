            const reader = new FileReader();
            reader.onload = function (e) {
                imagePreview.src = e.target.result;
                imagePreview.classList.remove("hidden");
                uploadPrompt.classList.add("hidden");
                cancelBtn.classList.remove("hidden");
            };
            reader.readAsDataURL(file);
        }
      });
      
      cancelBtn.addEventListener("click", function () {
        imagePreview.src = "";
        imagePreview.classList.add("hidden");
        uploadPrompt.classList.remove("hidden");
        cancelBtn.classList.add("hidden");
        fileInput.value = "";
      });

      // === [ê¸°ëŠ¥ 1] ë°°ë„ˆ ì„ì‹œ ë“±ë¡ (AJAX) ===
      addTempBtn.addEventListener("click", async () => {
          if (!fileInput.files[0]) return alert("ì´ë¯¸ì§€ íŒŒì¼ì„ ì„ íƒí•´ì£¼ì„¸ìš”.");
          const linkUrlVal = document.getElementById("newLinkUrl").value;
          if (!linkUrlVal.trim()) return alert("ë§í¬ ì •ë³´ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.");

          const formData = new FormData();
          formData.append("bannerImage", fileInput.files[0]);

          try {
              const res = await fetch("/admin/banner/upload", { method: "POST", body: formData });
              const data = await res.json();
              
              if(data.success) {
                  const linkType = document.querySelector('input[name="newLinkType"]:checked').value;
                  
                  // ìƒˆ ë°°ë„ˆ ì•„ì´í…œ ìƒì„±
                  const div = document.createElement("div");
                  div.className = "banner-item flex items-center justify-between p-3 border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition duration-200 cursor-grab group bg-white";
                  div.draggable = true;
                  div.innerHTML = `
                      <input type="hidden" class="banner-path" value="${data.imagePath}">
                      <div class="flex items-center space-x-4">
                          <span class="order-number w-6 text-center font-bold text-purple-600 text-lg"></span> 
                          <span class="text-gray-400 cursor-move p-2 hover:bg-gray-100 rounded">â˜°</span>
                          <div class="w-24 h-14 bg-gray-200 rounded overflow-hidden border border-gray-300">
                              <img src="${data.imagePath}" alt="ìƒˆ ë°°ë„ˆ" class="w-full h-full object-cover">
                          </div>
                      </div>

                      <div class="flex-grow grid grid-cols-3 gap-4 mx-4 items-center">
                          <div class="col-span-1">
                              <label class="text-xs text-gray-400 block mb-1">ë§í¬ íƒ€ì…</label>
                              <select class="banner-type w-full text-sm border border-gray-300 p-1.5 rounded focus:outline-none focus:border-purple-500 bg-white">
                                  <!-- [ìˆ˜ì •] (ì™¸ë¶€ ë§í¬) ë¬¸êµ¬ ì œê±° -->
                                  <option value="URL" ${linkType === 'URL' ? 'selected' : ''}>URL</option>
                                  <option value="PRODUCT" ${linkType === 'PRODUCT' ? 'selected' : ''}>ìƒí’ˆì½”ë“œ</option>
                              </select>
                          </div>
                          <div class="col-span-2">
                              <label class="text-xs text-gray-400 block mb-1">ë°°ë„ˆ ë§í¬</label>
                              <input
                                  type="text"
                                  class="banner-content w-full text-sm border border-gray-300 p-1.5 rounded focus:outline-none focus:border-purple-500 transition"
                                  value="${linkUrlVal}"
                              />
                          </div>
                      </div>

                      <button type="button" class="delete-banner-btn text-red-400 hover:text-red-600 p-2 rounded-full hover:bg-red-50 transition">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                          </svg>
                      </button>
                  `;
                  
                  container.appendChild(div);
                  
                  // ì…ë ¥ ì´ˆê¸°í™”
                  cancelBtn.click();
                  document.getElementById("newLinkUrl").value = "";
                  
                  updateOrderNumbers();
                  updateSlider();
                  
              } else {
                  alert("ì—…ë¡œë“œ ì‹¤íŒ¨: " + data.message);
              }
          } catch(err) {
              console.error(err);
              alert("ì—…ë¡œë“œ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.");
          }
      });
      
      // ... (ë‚˜ë¨¸ì§€ ì‚­ì œ, ì €ì¥, ìŠ¬ë¼ì´ë” ë¡œì§ì€ ê¸°ì¡´ ì½”ë“œ ê·¸ëŒ€ë¡œ ìœ ì§€) ...
      
      // === [ê¸°ëŠ¥ 2] ë°°ë„ˆ ëª©ë¡ ì‚­ì œ ===
      container.addEventListener('click', (e) => {
        const deleteBtn = e.target.closest('.delete-banner-btn');
        if (deleteBtn) {
            e.preventDefault(); 
            if (confirm('ì´ ë°°ë„ˆë¥¼ ëª©ë¡ì—ì„œ ì œì™¸í•˜ì‹œê² ìŠµë‹ˆê¹Œ? (ì €ì¥ ì‹œ ë°˜ì˜ë©ë‹ˆë‹¤)')) {
                deleteBtn.closest('.banner-item').remove();
                updateOrderNumbers();
                updateSlider();
            }
        }
      });

      // === [ê¸°ëŠ¥ 3] ë³€ê²½ì‚¬í•­ ì·¨ì†Œ (ìƒˆë¡œê³ ì¹¨) ===
      document.getElementById("cancel-changes-btn").addEventListener("click", () => {
          if(confirm("ì €ì¥í•˜ì§€ ì•Šì€ ë³€ê²½ì‚¬í•­ì€ ëª¨ë‘ ì‚¬ë¼ì§‘ë‹ˆë‹¤. ì·¨ì†Œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?")) {
