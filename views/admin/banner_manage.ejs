      // === [ê¸°ëŠ¥ 4] ë³€ê²½ì‚¬í•­ ì €ì¥ (Bulk Save) ===
      document.getElementById("save-all-btn").addEventListener("click", async () => {
          if(!confirm("í˜„ì¬ ìƒíƒœë¡œ ë°°ë„ˆë¥¼ ì €ì¥í•˜ì‹œê² ìŠµë‹ˆê¹Œ?")) return;

          const items = document.querySelectorAll(".banner-item");
          const dataToSave = [];

          items.forEach((item) => {
              dataToSave.push({
                  imagePath: item.querySelector(".banner-path").value,
                  linkType: item.querySelector(".banner-type").value,
                  linkContent: item.querySelector(".banner-content").value
              });
          });

          try {
              const res = await fetch("/admin/banner/save", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify({ banners: dataToSave })
              });
              const result = await res.json();

              if(result.success) {
                  alert("ì„±ê³µì ìœ¼ë¡œ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.");
                  location.reload();
              } else {
                  alert("ì €ì¥ ì‹¤íŒ¨: " + result.message);
              }
          } catch(err) {
              console.error(err);
              alert("ì„œë²„ í†µì‹  ì˜¤ë¥˜");
          }
      });
      
      // === ìŠ¬ë¼ì´ë” ë° ë“œë˜ê·¸ ë¡œì§ ===
      const slider = document.getElementById('banner-slider');
      const prevBtn = document.getElementById('prev-slide');
      const nextBtn = document.getElementById('next-slide');
      const slideCountDisplay = document.getElementById('slide-count');
      
      let currentSlide = 0;
      let totalSlides = 0;
      
      function updateSlider() {
          const bannerItems = container.querySelectorAll('.banner-item');
          totalSlides = bannerItems.length;
          slideCountDisplay.textContent = totalSlides;

          slider.innerHTML = ''; 
          slider.style.transform = `translateX(0)`; 
          
          if (totalSlides > 0) {
              bannerItems.forEach((item, index) => {
                  const imgPath = item.querySelector('.banner-path').value;
                  const newSlide = document.createElement('div');
                  newSlide.className = 'banner-slide flex-shrink-0 w-full h-full';
                  newSlide.innerHTML = `
                      <img 
                          src="${imgPath}" 
                          alt="ë°°ë„ˆ ì´ë¯¸ì§€ ${index + 1}" 
                          class="w-full h-full object-cover"
                      >
                  `;
                  slider.appendChild(newSlide);
              });
              
              setTimeout(() => {
                 const slides = slider.querySelectorAll('.banner-slide');
                 slides.forEach(slide => {
                     slide.style.width = slider.parentElement.offsetWidth + 'px';
                 });
                 updateSlidePosition();
              }, 50);
          } else {
              slider.innerHTML = '<div class="w-full h-full flex items-center justify-center text-gray-500 text-lg flex-shrink-0">ë“±ë¡ëœ ë°°ë„ˆê°€ ì—†ìŠµë‹ˆë‹¤.</div>';
          }
          currentSlide = 0;
      }

      function updateSlidePosition() {
          if (totalSlides === 0) return;
          const slideWidth = slider.parentElement.offsetWidth; 
          slider.style.transition = 'transform 0.3s ease-in-out'; 
          slider.style.transform = `translateX(-${currentSlide * slideWidth}px)`;
      }
      
      prevBtn.addEventListener('click', () => {
          if (totalSlides > 0) {
              currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
              updateSlidePosition();
          }
      });

      nextBtn.addEventListener('click', () => {
          if (totalSlides > 0) {
              currentSlide = (currentSlide + 1) % totalSlides;
              updateSlidePosition();
          }
      });
      
      let draggedItem = null;
      container.addEventListener('dragstart', (e) => {
          const target = e.target.closest('.banner-item');
          if (target) {
              draggedItem = target;
              e.dataTransfer.effectAllowed = 'move';
              setTimeout(() => target.classList.add('dragging'), 0); 
          }
      });

      container.addEventListener('dragend', (e) => {
          if (draggedItem) {
              draggedItem.classList.remove('dragging');
          }
          draggedItem = null;
          updateOrderNumbers();
          updateSlider();
      });
      
      container.addEventListener('dragover', (e) => {
          e.preventDefault();
          if (!draggedItem) return;
          const afterElement = getDragAfterElement(container, e.clientY);
          if (afterElement != null) {
              if (afterElement !== draggedItem.nextElementSibling) {
                 container.insertBefore(draggedItem, afterElement);
              }
          } else {
              container.appendChild(draggedItem);
          }
      });
      
      function getDragAfterElement(container, y) {
          const draggableElements = [...container.querySelectorAll('.banner-item:not(.dragging)')];
          return draggableElements.reduce((closest, child) => {
              const box = child.getBoundingClientRect();
              const offset = y - box.top - box.height / 2; 
              if (offset < 0 && offset > closest.offset) {
                  return { offset: offset, element: child }; 
              } else {
                  return closest;
              }
          }, { offset: Number.NEGATIVE_INFINITY }).element;
      }
      
      function updateOrderNumbers() {
          const bannerItems = container.querySelectorAll('.banner-item');
          bannerItems.forEach((item, index) => {
              const orderSpan = item.querySelector('.order-number');
              if (orderSpan) orderSpan.textContent = index + 1;
          });
      }

      window.addEventListener('resize', () => {
          updateSlider();
          updateSlidePosition();
      });
      
      // ì´ˆê¸° ë¡œë”©
      updateSlider(); 
      updateOrderNumbers();
    </script>
