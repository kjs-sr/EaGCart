            if(file.size > 2 * 1024 * 1024) {
                alert("ì´ë¯¸ì§€ ìš©ëŸ‰ì€ 2MBë¥¼ ì´ˆê³¼í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
