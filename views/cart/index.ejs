    <%- include('../partials/footer.ejs') %>

    <script>
      // ì „ì²´ ì„ íƒ í† ê¸€
      function toggleAll(source) {
        const checkboxes = document.querySelectorAll(".cart-check");
        checkboxes.forEach((cb) => (cb.checked = source.checked));
        calculateTotal();
      }

      // ìˆ˜ëŸ‰ ë³€ê²½ (ì‹¤ì‹œê°„ ì¬ê³  í™•ì¸ í¬í•¨)
      async function changeQty(code, change) {
        const qtySpan = document.getElementById(`qty-${code}`);
        let currentQty = parseInt(qtySpan.innerText);
        let newQty = currentQty + change;

        if (newQty < 1) {
          alert("ìµœì†Œ ìˆ˜ëŸ‰ì€ 1ê°œì…ë‹ˆë‹¤.");
          return;
        }

        // ìˆ˜ëŸ‰ ì¦ê°€ ì‹œì—ë§Œ ì„œë²„ ì¬ê³  ì²´í¬
        if (change > 0) {
          try {
            const stockRes = await fetch(`/api/product/stock?id=${code}`);
            const stockData = await stockRes.json();

            if (stockData.success) {
              if (newQty > stockData.stock) {
                alert("í˜„ì¬ ì¬ê³ ë³´ë‹¤ êµ¬ë§¤í•  ê°œìˆ˜ê°€ ë§ìŠµë‹ˆë‹¤.");
                return;
              }
            } else {
              console.error("ì¬ê³  ì •ë³´ í™•ì¸ ë¶ˆê°€");
              return;
            }
          } catch (e) {
            console.error(e);
            alert("ì„œë²„ í†µì‹  ì˜¤ë¥˜");
            return;
          }
        }

        // ì¬ê³  í™•ì¸ í†µê³¼ í›„ ì—…ë°ì´íŠ¸ ìš”ì²­
        try {
          const res = await fetch("/cart/update", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ productCode: code, qty: newQty }),
          });
          const data = await res.json();

          if (data.success) {
            qtySpan.innerText = newQty;
            calculateTotal();
          } else {
            alert(data.message || "ìˆ˜ëŸ‰ ë³€ê²½ ì‹¤íŒ¨");
          }
        } catch (e) {
          console.error(e);
          alert("ì„œë²„ í†µì‹  ì˜¤ë¥˜");
        }
      }

      // ìƒí’ˆ ì‚­ì œ
      async function deleteItem(code) {
        if (!confirm("ì •ë§ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?")) return;
        try {
          const res = await fetch("/cart/delete", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ productCode: code }),
          });
          const data = await res.json();
          if (data.success) {
            document.getElementById(`item-${code}`).remove();
            const remaining = document.querySelectorAll(".cart-item");
            if (remaining.length === 0) location.reload();
            else calculateTotal();
          } else {
            alert("ì‚­ì œ ì‹¤íŒ¨");
          }
        } catch (e) {
          console.error(e);
        }
      }

      // ì´ ê°€ê²© ê³„ì‚° (ì²´í¬ëœ í•­ëª©ë§Œ)
      function calculateTotal() {
        const checkboxes = document.querySelectorAll(".cart-check:checked");
        let total = 0;
        checkboxes.forEach((cb) => {
          const row = cb.closest(".cart-item");
          const qtyText = row.querySelector('[id^="qty-"]').innerText;
          const qty = parseInt(qtyText);
          const price = parseInt(cb.dataset.price);
          total += price * qty;
        });
        const formattedTotal = total.toLocaleString();

        // í—¤ë”ì™€ í‘¸í„°ì˜ ì´ì•¡ í‘œì‹œ ì—…ë°ì´íŠ¸
        const headerTotal = document.getElementById("headerTotal"); // í—¤ë”ì— IDê°€ ìˆë‹¤ë©´
        if (headerTotal) headerTotal.innerText = formattedTotal;

        const footerTotal = document.getElementById("footerTotal");
        if (footerTotal) footerTotal.innerText = formattedTotal;
      }

      // ê²°ì œ í˜ì´ì§€ë¡œ ì´ë™ (ì²´í¬ëœ ìƒí’ˆë§Œ)
      function goToCheckout() {
        const checkboxes = document.querySelectorAll(".cart-check:checked");
        if (checkboxes.length === 0) {
          alert("êµ¬ë§¤í•  ìƒí’ˆì„ ì„ íƒí•´ì£¼ì„¸ìš”.");
          return;
        }

        const selectedCodes = [];
        checkboxes.forEach((cb) => {
          const row = cb.closest(".cart-item");
          const code = row.id.replace("item-", "");
          selectedCodes.push(code);
        });

        // items íŒŒë¼ë¯¸í„°ë¡œ ìƒí’ˆ ì½”ë“œ ì „ë‹¬
        location.href = "/checkout?items=" + selectedCodes.join(",");
      }
    </script>
