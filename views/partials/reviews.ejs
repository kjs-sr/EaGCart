<section class="space-y-6 pt-12 border-t border-slate-200" id="reviewSection">
  <header class="flex items-center justify-between mb-2">
    <div class="flex items-center gap-3">
      <h2 class="text-2xl font-bold text-slate-800">상품 리뷰</h2>
      <span
        class="text-sm font-bold text-purple-600 bg-purple-50 px-2.5 py-0.5 rounded-full border border-purple-100"
      >
        <%= reviews ? reviews.length : 0 %>건
      </span>
    </div>
  </header>

  <div class="space-y-4">
    <% if (reviews && reviews.length > 0) { %> <% reviews.forEach((review) => {
    %>
    <article
      class="bg-white rounded-2xl border border-slate-100 p-6 shadow-sm hover:shadow-md transition duration-200 flex flex-col gap-4"
    >
      <!-- [1열] 작성자 / 별점 / 날짜 -->
      <div
        class="flex justify-between items-start border-b border-slate-50 pb-3"
      >
        <div class="flex items-center gap-3">
          <span class="text-sm font-bold text-slate-700"
            >작성자: <%= review.nickname %></span
          >

          <!-- 별점 -->
          <div
            class="flex text-amber-400 text-sm"
            aria-label="별점 <%= review.rating %>점"
          >
            <% for(let i=1; i<=5; i++) { %> <% if(i <= review.rating) { %>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-4 h-4"
            >
              <path
                fill-rule="evenodd"
                d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                clip-rule="evenodd"
              />
            </svg>
            <% } else { %>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-4 h-4 text-slate-200"
            >
              <path
                fill-rule="evenodd"
                d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                clip-rule="evenodd"
              />
            </svg>
            <% } %> <% } %>
          </div>
        </div>

        <!-- 작성일 -->
        <span class="text-xs font-mono text-slate-400"><%= review.date %></span>
      </div>

      <!-- [2열] 이미지 리스트 (있을 경우만) -->
      <% if (review.images && review.images.length > 0) { %>
      <div class="flex gap-2 overflow-x-auto pb-1 no-scrollbar">
        <% review.images.forEach(img => { %>
        <div
          class="w-20 h-20 bg-gray-50 rounded-lg flex-shrink-0 overflow-hidden border border-slate-200"
        >
          <!-- 클릭 시 원본 보기 기능 등을 고려할 수 있음 -->
          <img
            src="<%= img %>"
            alt="리뷰 이미지"
            class="w-full h-full object-cover hover:scale-105 transition duration-300"
          />
        </div>
        <% }) %>
      </div>
      <% } %>

      <!-- [3열] 제목 및 내용 -->
      <div>
        <h3 class="font-bold text-slate-800 text-base mb-2">
          <%= review.title %>
        </h3>
        <p class="text-slate-600 text-sm leading-relaxed whitespace-pre-wrap">
          <%= review.content %>
        </p>
      </div>
    </article>
    <% }) %> <% } else { %>
    <div
      class="py-16 text-center bg-slate-50 rounded-3xl border border-slate-200 border-dashed"
    >
      <span class="text-4xl block mb-3 opacity-30">💬</span>
      <p class="text-slate-500 mb-1 font-medium">
        아직 작성된 리뷰가 없습니다.
      </p>
      <p class="text-xs text-slate-400">
        상품을 구매하고 첫 번째 리뷰를 남겨보세요!
      </p>
    </div>
    <% } %>
  </div>
</section>
